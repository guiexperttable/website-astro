---
const id = 'div' + Math.random().toString(36).slice(2, 11);
---

<div class="px-8">
  <div
      style="height: calc(100vh - 300px); width: 340px;"
      class:list={[id, 'large-demo']}></div>
</div>


<script
    is:inline
    define:vars={{id}}
    type="module">

  import {
    TableScope,
    EventAdapter,
    SimpleDomService
  } from '/scripts/table/index.js'
  import {createLargeModelAndOptions} from "/scripts/demo-table-models/index.js";

  const tableEle = document.querySelector('.' + id);
  const {tableModel, tableOptions}  = createLargeModelAndOptions(2*1000*1000);

  new TableScope(
    tableEle,
    tableModel,
    new SimpleDomService(),
    tableOptions,
    new EventAdapter()
  ).firstInit();


</script>

<style>
    div {
        font-size: 14px;
    }
</style>