---
export interface Props {
  id: string;
  title: string;
  noLead: boolean
}

const { title, id, noLead } = Astro.props;
---

<section
  id={id}
  class:list={[ { 'text-sm': noLead },  'flex scroll-mt-24 flex-col items-center gap-4 space-y-8' ]}>
  <div class="flex flex-col items-center gap-4 pt-8">
    <slot name="eyebrow" />
    <h2 class="gradient-text text-center font-extrabold tracking-tight text-6xl">
      {title}
    </h2>
  </div>

  <p class:list={[ { hidden: noLead },  'max-sm:pl-4 max-sm:pr-4 max-w-xl text-center font-extrabold text-2xl' ]}>
    <slot name="lead" />
  </p>
  <slot />
</section>
